{
  "name": "NicoSave",
  "description": "右クリックしてニコニコ動画を保存",
  "version": "0.01",
  "manifest_version": 2,
  "content_scripts": [{
    "matches": ["http://www.nicovideo.jp/watch/*"],
    "js": ["background.js"]
  }],
  "background": {
        "scripts": ["background.js"],
        "persistent": false
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "16": "nico.png"
  },
  "browser_action": {
    "default_popup": "about.html"
  }
}